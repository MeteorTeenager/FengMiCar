<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfedu.sys.mapper.UserMapper">

    <!--定义resultMap-->
    <resultMap id="base_result_data" type="com.qfedu.sys.domain.User">
        <!--数据库表字段和domian中user字段的对应关系-->
        <id column="userid" jdbcType="INTEGER" property="userid" />
        <result column="loginname" jdbcType="VARCHAR" property="loginname" />
        <result column="identity" jdbcType="VARCHAR" property="identity" />
        <result column="realname" jdbcType="VARCHAR" property="realname" />
        <result column="sex" jdbcType="INTEGER" property="sex" />
        <result column="address" jdbcType="VARCHAR" property="address" />
        <result column="phone" jdbcType="VARCHAR" property="phone" />
        <result column="pwd" jdbcType="VARCHAR" property="pwd" />
        <result column="position" jdbcType="VARCHAR" property="position" />
        <result column="type" jdbcType="INTEGER" property="type" />
        <result column="available" jdbcType="INTEGER" property="available" />
    </resultMap>

    <sql id="user_cloum_list">
        userid,loginname,identity,realname,sex,address,phone,pwd,position,type,available
    </sql>

      <!--
      用户登录： 根据登录名和密码查找用户，返回一个user对象
      -->
    <select id="queryUserByNameAndPwd" resultMap="base_result_data">
        select <include refid="user_cloum_list"/> from  sys_user where loginname =#{loginname} and pwd = #{pwd}
    </select>

</mapper>